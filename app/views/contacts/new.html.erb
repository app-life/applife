<div class="row">
    <%= form_for(@contact) do |f| %>

    <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :mail, 'メールアドレス' %>
        <%= f.text_field :mail, class:"form-control" %>


    <div class="form-group">
        <%= f.label :body, 'お問い合わせ内容' %>
        <%= f.text_area :body, rows: 5, placeholder: '250文字以内で入力してください', class:"form-control" %>
    </div>

        <%= f.submit '送信' %>
        <% end %>
</div>